generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Post {
  id        String   @id @default(cuid())
  title     String
  content   String?
  published Boolean  @default(false)
  authorId  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Vehicle {
  id              String   @id @default(cuid())
  name            String
  category         String
  price            Int
  year            Int
  mileage          String
  fuel             String
  transmission     String
  image            String
  features         String   // JSON string of features array
  specsEngine      String
  specsHp          Int
  specsTorque      String
  specsAcceleration String
  specsFuelEconomy String
  specsTransmission String
  specsDrivetrain  String
  specsFuelTank    String
  specsSeating      Int
  specsCargo        String
  colors           String   // JSON string of colors array
  description      String
  gallery          String?  // JSON string of gallery images array
  popular          Boolean  @default(false)
  isNew            Boolean  @default(false)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

model MenuItem {
  id          String   @id @default(cuid())
  name        String
  description String
  price       Int
  category    String
  popular     Boolean  @default(false)
  spicy       Boolean  @default(false)
  image       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}